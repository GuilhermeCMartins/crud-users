{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@apps/*": ["src/apps/*"],
      "@controllers/*": ["src/apps/health/controllers/*"],
      "@services/*": ["src/apps/health/services/*"],
      "@common/*": ["src/common/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  }
}
